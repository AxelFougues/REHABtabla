//==============================================================
// Percussion - Timpani Roll
//
// This was built from NoBudget Orchestra after I created round robin
// samples from the original, then tapped out a timpani roll and recorded it
//
// Timpani samples:
//  No Budget Orchestra - https://nobudgetorchestra.net
//
//  modified by Paul Battersby - http://virtualplaying.com
//
//==============================================================
<group>
ampeg_release=0.6
volume=7

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-C2-PB.wav
lokey=c2 hikey=c#2 pitch_keycenter=c2

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-D2-PB.wav
lokey=d2 hikey=d#2 pitch_keycenter=d2

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-E2-PB.wav
lokey=e2 hikey=f2 pitch_keycenter=e2

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-G2-PB.wav
lokey=f#2 hikey=g#2 pitch_keycenter=g2

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-A2-PB.wav
lokey=a2 hikey=a#2 pitch_keycenter=a2

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-C3-PB.wav
lokey=b2 hikey=c#3 pitch_keycenter=c3

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-D3-PB.wav
lokey=d3 hikey=d#3 pitch_keycenter=d3

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-E3-PB.wav
lokey=e3 hikey=f3 pitch_keycenter=e3

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-G3-PB.wav
lokey=f#3 hikey=g#3 pitch_keycenter=g3

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-A3-PB.wav
lokey=a3 hikey=a#3 pitch_keycenter=a3

<region>
sample=..\libs\Other\Samples/Timpani/timpani-roll-C4-PB.wav
lokey=b3 hikey=c4 pitch_keycenter=c4


