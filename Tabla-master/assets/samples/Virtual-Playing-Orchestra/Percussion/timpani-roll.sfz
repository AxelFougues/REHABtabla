 // ----------------- Right Hand -----------------
<group>
trigger=release
volume=-5
// randomize like a real player
ampeg_attack=0.03

pitch_random=5
amp_random=1

group_label=right_hand
group=1



ampeg_sustain=0 ampeg_hold=0 ampeg_decay=20 ampeg_release=3

